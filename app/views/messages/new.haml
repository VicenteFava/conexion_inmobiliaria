%section.background-gray
  .container
    .row
      .col-sm-12.col-md-10.col-md-offset-1.contact_inputs
        = form_for @message do |f|
          - if @message.errors.any?
            .row
              %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being sent:"
              %ul
                - @message.errors.full_messages.each do |msg|
                  %li= msg
                %ul
          .row
            .col-md-6.contact_input
              = f.text_field :email, placeholder: 'Email', class: 'form-control'
            .col-md-6.contact_input
              = f.text_field :subject, placeholder: 'Asunto', class: 'form-control'
          .row
            .col-md-6.contact_input
              = f.text_field :name, placeholder: 'Nombre', class: 'form-control'
            .col-md-6.contact_input
              = f.text_field :phone, placeholder: 'Numero', class: 'form-control'
          .row
            .col-md-12.contact_input
              = f.text_area :content, class: 'form-control', :placeholder => 'Texto', rows: 5
          .row
            .col-md-3
              = f.submit 'Enviar', name: nil, class: 'btn btn-primary contact-button'
