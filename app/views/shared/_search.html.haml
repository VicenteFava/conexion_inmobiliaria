= form_tag properties_path, :method => 'get' do
  .row
    .col-md-3
      = label_tag 'Tipo de Propiedad'
      = select_tag :property_type_id, grouped_options_for_select(@property_types), { class: 'form-control selectpicker show-tick', prompt: 'Cualquiera', :"data-style" => 'btn-primary' }
    / /.col
    .col-md-2
      = label_tag 'OperaciÃ³n'
      = select_tag :transaction_type_id, grouped_options_for_select(@transaction_types), { class: 'form-control selectpicker show-tick', prompt: 'Cualquiera', :'data-style' => 'btn-primary' }
    / /.col
    .col-md-3
      = label_tag 'Barrio'
