<%= form_tag properties_path, :method => 'get' do %>
  <div class='row'>

    <div class='col-md-3'>
      <%= label_tag 'Tipo de Propiedad' %>
      <%= select_tag :property_type_id, grouped_options_for_select(@property_types), { class: 'form-control selectpicker show-tick', prompt: 'Cualquiera', :"data-style" => 'btn-primary' } %>
    </div><!-- /.col -->

    <div class='col-md-2'>
      <%= label_tag 'OperaciÃ³n' %>
      <%= select_tag :transaction_type_id, grouped_options_for_select(@transaction_types), { class: 'form-control selectpicker show-tick', prompt: 'Cualquiera', :'data-style' => 'btn-primary' } %>
    </div><!-- /.col -->

    <div class='col-md-3'>
      <%= label_tag 'Barrio' %>
      <%= select_tag :neighborhood_id, grouped_options_for_select(@neighborhood), { class: 'form-control selectpicker show-tick', prompt: 'Cualquiera', :'data-live-search' => :true, :'data-style' => 'btn-primary' } %>
    </div><!-- /.col -->

    <div class='col-md-2'>
      <%= label_tag 'Precio' %>
      <%= select_tag :price_id, grouped_options_for_select(@prices), { class: 'form-control selectpicker show-tick', prompt: 'Cualquiera', :'data-style' => 'btn-primary' } %>
    </div><!-- /.col -->

    <div class='col-md-2'>
      <%= label_tag 'Listo?' %>
      <%= submit_tag 'Search', :name => nil, class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>