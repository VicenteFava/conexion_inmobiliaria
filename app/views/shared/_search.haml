  .row
    .col-md-3
      = label_tag 'Tipo de Propiedad'
      = select_tag 'search[property_type]', grouped_options_for_select(@property_types, @search.try(:[], :property_type)), { class: 'form-control selectpicker show-tick', prompt: 'Todos', :"data-style" => 'btn-primary' }
    / /.col
    .col-md-2
