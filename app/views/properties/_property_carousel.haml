/ Carousel
#slider-property.carousel.slide{ 'data-ride' => 'carousel' }
  / Wrapper for slides
  .carousel-inner
    .item.active
      = image_tag(property.photo_url, class: 'carousel-image')
    - property.photos.each do |photo|
      .item
        = image_tag(photo.url, class: 'carousel-image')
  / Controls
  %a.left.carousel-control{'data-slide' => 'prev', :href => '#slider-property', :role => 'button'}
    %span.glyphicon.glyphicon-chevron-left
  %a.right.carousel-control{'data-slide' => 'next', :href => '#slider-property', :role => 'button'}
    %span.glyphicon.glyphicon-chevron-right
  / Indicators
  %ol.carousel-photos
    %li.active{ 'data-slide-to' => '0', 'data-target' => '#slider-property' }
      %img{ :alt => '', :src => property.photo_url }
    - property.photos.each_with_index do |photo, i|
      %li{ 'data-slide-to' => i+1, 'data-target' => '#slider-property' }
        %img{ :alt => '', :src => photo.url }
